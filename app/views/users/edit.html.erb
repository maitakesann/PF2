<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>ユーザー編集画面</h2>
    <%= form_with model:@user, local:true do |f| %>
      <%= render 'layouts/errors', obj: @user %>

      <div class="container">
        <%= f.label :名前 %>
        <%= f.text_field :name %>
      </div>

      <div class="container">
        <%= f.label :プロフィール画像 %>
        <%= f.attachment_field :profile_image %>
      </div>

      <div class="container">
        <%= f.label :自己紹介文 %>
        <%= f.text_area :introduction %>
      </div>

      <div class="container">
        <%= f.submit "変更を完了する", class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
</div>
