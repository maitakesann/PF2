<h1 class="text-center py-3">フォロワー一覧</h1>


<% @users.each do |user| %>
    <table class='table'>
      <thead>
        <tr>
          <th>プロフィール画像</th>
          <th>名前</th>
          <th colspan="4"></th>
        </tr>
      </thead>
      <tbody>
        <tr>
            <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
            <td><%= user.name %></td>
            
           
            <td>
              <p><%= "#{user.followings.count} フォロー数" %></p>
            </td>
            <td>
              <p><%= "#{user.followers.count} フォロワー数" %></p>
            </td>
            <td><%= link_to '詳細ページへ', user_path(user), class: "user_#{user.id}" %></td>
        </tr>
      
    </tbody>
    </table>
<% end %>