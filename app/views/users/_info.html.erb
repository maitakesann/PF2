<table class='table'>
  <tr><%= attachment_image_tag(user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg") %></tr>
  <tr>
	  <th>名前</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>自己紹介</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>フォロー</th>
    <th>
      <%= link_to "#{user.followings.count}", user_follows_path(user.id), id: "follow_count"%>
    </th>
  </tr>
  <tr>
    <th>フォロワー</th>
    <th>
      <%= link_to "#{user.followers.count}", user_followers_path(user.id),id: "follower_count" %>
    </th>
  </tr>
</table>

