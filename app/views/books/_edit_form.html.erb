<div class="list-group my-3">
  <h5 class="card-header text-center">編集内容</h5>
  <div class="card-body text-center">
      <%= form_with model:book,local:true do |f| %>
      <%= render 'layouts/errors', obj: @book %>
      
        <div class=" py-2">
          <%= f.text_field :title,size: "30x5",placeholder: "タイトルを入力してください" %>
        </div>
        
         <%= f.text_area :body,size: "30x5",placeholder: "本文を入力してください" %>
        <div>
          <%= f.submit "変更する", class: 'btn btn-success' %>
        </div>
      <% end %>
  </div>  
</div>