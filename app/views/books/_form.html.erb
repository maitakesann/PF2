<div class="card ">
  <h5 class="card-header">新規投稿</h5>
  <div class="card-body">
      <%= form_with model:book,local:true do |f| %>
      <%= render 'layouts/errors', obj: @book %>
      
        <div class="container py-3">
          <div>
          <%= f.label :タイトルを入力してください %>
          </div>
          <%= f.text_field :title %>
        </div>
        <div class="container">
          <%= f.label :本文を入力してください %>
        </div>
         <%= f.text_area :body %>
        <div class="container">
          <%= f.submit "投稿する", class: 'btn btn-success' %>
        </div>
      <% end %>
  </div>  
</div>
