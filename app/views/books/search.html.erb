
  <h1 class="text-center">検索画面</h1>
  <div class="row col-7 offset-3 py-4">
  <%= form_with url: search_books_path, method: :get, local: true do |f| %>
    <%= f.text_field :title, size: "50x10",placeholder: "単語から該当するタイトルを検索します" %>
    <%= f.submit :検索 %>
  <% end %>
  </div>


<div class="list-group my-4">
  <h5 class="card-header text-center">投稿一覧</h5>
  <% @books.each do |book| %>
  <div class="list-group-item list-group-horizontal mb-4" >
    <h5 class="card-title my-2"><i class="fab fa-hire-a-helper"></i> <%= link_to book.title, book_path(book), class: "book_#{book.id}" %></h5>
    <h6 class="card-subtitle mb-2 text-muted py-3"><i class="far fa-comment-alt"></i> <%= book.body %></h6>
  </div>  
  <% end %>
</div>