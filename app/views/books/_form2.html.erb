<div class="list-group">
  <h5 class="card-header">新規投稿</h5>
  <div class="card-body">
      <%= form_with model:book,local:true do |f| %>
      <%= render 'layouts/errors', obj: @book %>
      
        <div class=" py-2">
          <%= f.text_field :title,size: "30x5",placeholder: "タイトルを入力してください" %>
        </div>
         <%= f.text_area :body,size: "80x5",placeholder: "本文を入力してください" %>
        <div>
          <%= f.submit "投稿する", class: 'btn btn-success' %>
        </div>
      <% end %>
  </div>  
</div>
